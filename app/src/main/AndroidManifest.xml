<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.whirledsol.jsoncrypt">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.JsonCrypt">
        <activity
            android:name="me.whirledsol.jsoncrypt.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.JsonCrypt.NoActionBar"
            android:exported="true">
            <intent-filter>1
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.whirledsol.jsoncrypt.ResultActivity"
            android:theme="@style/Theme.JsonCrypt.NoActionBar"
        />
        <activity android:name="me.whirledsol.jsoncrypt.AboutActivity"
            android:theme="@style/Theme.JsonCrypt.NoActionBar"
        />
        <activity
            android:name="me.whirledsol.jsoncrypt.ExitActivity"
            android:theme="@android:style/Theme.NoDisplay"
            android:autoRemoveFromRecents="true"/>
    </application>

</manifest>